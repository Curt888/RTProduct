<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundEnd"
    tools:context=".SecondActivity">


    <TextView
        android:id="@+id/versionTV"
        android:layout_width="41dp"
        android:layout_height="38dp"
        android:background="@color/colorBackgroundEnd"
        android:ems="10"
        android:textAlignment="center"
        android:textColor="@android:color/holo_red_dark"
        android:textColorLink="@android:color/holo_red_dark"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.982"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.836" />

    <Button
        android:id="@+id/TimeCardBtn"
        android:layout_width="320dp"
        android:layout_height="85dp"
        android:background="@drawable/button_normal"
        android:checked="false"
        android:text="@string/TimeCardBtn"
        android:textAlignment="center"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/TimecardIcon"
        android:layout_width="60dp"
        android:layout_height="55dp"
        android:translationZ="90dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.743"
        app:layout_constraintStart_toStartOf="@+id/mapBtn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.97"
        app:srcCompat="@drawable/timecard" />

    <Button
        android:id="@+id/Scale_OutBtn"
        android:layout_width="252dp"
        android:layout_height="60dp"
        android:background="@drawable/button_normal"
        android:checked="false"
        android:text="@string/Scale_OutBtn"
        android:textAlignment="center"
        android:textColor="@color/colorGradEnd"
        android:textSize="30sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.321" />

    <Button
        android:id="@+id/mapBtn"
        android:layout_width="320dp"
        android:layout_height="85dp"
        android:background="@drawable/button_normal"
        android:checked="false"
        android:text="@string/map"
        android:textAlignment="center"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/MapIcon"
        android:layout_width="60dp"
        android:layout_height="55dp"
        android:translationZ="90dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.056"
        app:layout_constraintStart_toStartOf="@+id/mapBtn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.97"
        app:srcCompat="@drawable/nav_map2" />

    <TextView
        android:id="@+id/etMessage"
        android:layout_width="138dp"
        android:layout_height="45dp"
        android:ems="10"
        android:importantForAutofill="no"
        android:text="@string/etMessage"
        android:textColor="@color/colorWhite"
        android:textColorHint="@android:color/black"
        android:textColorLink="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.445"
        tools:ignore="LabelFor" />

    <TextView
        android:id="@+id/tvCall_Out"
        android:layout_width="517dp"
        android:layout_height="57dp"
        android:background="@color/colorBackgroundEnd"
        android:ems="10"
        android:textAlignment="center"
        android:textColor="@android:color/holo_red_dark"
        android:textColorLink="@android:color/holo_red_dark"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.567" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="517dp"
        android:layout_height="57dp"
        android:background="@color/colorBackgroundEnd"
        android:popupBackground="@color/colorBackgroundEnd"
        android:scrollbarSize="30dp"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.725" />

    <Button
        android:id="@+id/ClearBtn"
        android:layout_width="320dp"
        android:layout_height="85dp"
        android:background="@drawable/button_normal"
        android:checked="false"
        android:text="@string/clear"
        android:textAlignment="center"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/MessageIcon"
        android:layout_width="60dp"
        android:layout_height="55dp"
        android:alpha=".50"
        android:translationZ="90dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.374"
        app:layout_constraintStart_toStartOf="@+id/mapBtn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.97"
        app:srcCompat="@drawable/message_bubble2" />

    <ImageView
        android:id="@+id/homeView5"
        android:layout_width="961dp"
        android:layout_height="115dp"
        android:scaleType="fitXY"
        android:src="@drawable/header_graphic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/statusLabl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e9ab90"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/textview"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.211" />

    <TextView
        android:id="@+id/tvReady"
        android:layout_width="340dp"
        android:layout_height="46dp"
        android:textAlignment="center"
        android:textColor="#6bfff7"
        android:textSize="24sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.045" />

    <ImageView
        android:id="@+id/SettingsIcon"
        android:layout_width="60dp"
        android:layout_height="55dp"
        android:layout_marginEnd="16dp"
        android:alpha=".50"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.029"
        app:srcCompat="@drawable/settings_gear" />

    <TextClock
        android:id="@+id/TextTime"
        android:layout_width="190dp"
        android:layout_height="55dp"
        android:ems="10"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        app:layout_constraintVertical_bias="0.055"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <!--            android:inputType="textMultiLine"-->


</androidx.constraintlayout.widget.ConstraintLayout>